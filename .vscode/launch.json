{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Cargo launch",
      "cargo": {
        "cwd": "${workspaceFolder}/llmx-rs",
        "args": ["build", "--bin=llmx-tui"]
      },
      "args": []
    },
    {
      "type": "lldb",
      "request": "attach",
      "name": "Attach to running llmx CLI",
      "pid": "${command:pickProcess}",
      "sourceLanguages": ["rust"]
    }
  ]
}
